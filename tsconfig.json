{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "paths": {
      "@anupheaus/common": [
        "../common/src"
      ],
      "@anupheaus/react-ui": [
        "../react-ui/src"
      ],
      "@anupheaus/mysql-stores": [
        "../mysql-stores/src"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "es6",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "test-server/**/*",
  ],
  "exclude": [
    "dist"
  ]
}